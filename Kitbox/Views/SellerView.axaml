<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Kitbox.ViewModels"
             x:Class="Kitbox.Views.SellerView"
             x:DataType="vm:SellerViewModel">
             

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Partie Gauche -->
        <StackPanel Orientation="Vertical" Margin="10" Grid.Column="0">
            <StackPanel Orientation="Horizontal">
                <TextBox Watermark = "email" Text="{Binding Seller.Email, Mode=TwoWay}" Margin="0,10,0,0"/>
                
            </StackPanel>

            <Button Content="ok" Width="40" Height="30" Margin="5"/>
            <Button Content="edit" Width="60" Height="30" Margin="5"/>
            <Button Content="Confirm" Width="120" Height="40" Margin="5"/>
        </StackPanel>
        

        <!-- Partie Droite -->
        <Border Grid.Column="1" BorderBrush="White" BorderThickness="2" Margin="10">
            <StackPanel>
                <TextBlock Text="──────────────" Foreground="White" Margin="10"/>
                <TextBlock Text="──────────────" Foreground="White" Margin="10"/>
                <TextBlock Text="──────────────" Foreground="White" Margin="10"/>
                <TextBlock Text="──────────────" Foreground="White" Margin="10"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
