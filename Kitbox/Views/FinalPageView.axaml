<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Kitbox.ViewModels;assembly=Kitbox"
        x:Class="Kitbox.Views.FinalPageView"
        x:DataType="vm:CustomerViewModel"
        Title="Kitbox's App"
        Background="Pink">

    <Grid>
        <TextBlock Text="Thanks for your order!" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="Black"/>
        <TextBlock Text="Your order will be delivered soon."
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="18" 
                   Margin="0,50,0,0"
                   Foreground="Black"/>
        <Button Content="Back to Home"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Command ="{Binding BackToHomeCommand}"
                Margin="0,100,0,0"
                Background="Blue"
                Foreground="White"/>
    </Grid>
</Window>