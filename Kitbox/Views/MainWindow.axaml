<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Kitbox.ViewModels"
        xmlns:v="using:Kitbox.Views"
        x:Class="Kitbox.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Kitbox">

	<StackPanel>
		<TextBox Text="{Binding InputNumber, Mode=TwoWay}" Width="200" Margin="10"/>
		<Button Content="Switch Window" Command="{Binding ShowWindowCommand}" Width="200" Margin="10"/>
		
	</StackPanel>

</Window>
