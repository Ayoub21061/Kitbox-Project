<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Kitbox.ViewModels;assembly=Kitbox"
        x:Class="Kitbox.Views.SecondPageView"
        x:DataType="vm:CustomerViewModel"
        Title="Kitbox's App">

  <Grid Background="White">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- EntÃªte -->
    <Border Background="Red" Height="30" HorizontalAlignment="Stretch">
      <TextBlock Text="Lockers" Foreground="White"
                 VerticalAlignment="Center" HorizontalAlignment="Center"
                 FontSize="18" FontWeight="Bold"/>
    </Border>

    <!-- Contenu principal -->
    <Grid Grid.Row="2">
        <Button Content="Next Page"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,10,10,10"
                Command="{Binding SecondPageCommand}"
                BorderBrush="Black"
                BorderThickness="3"
                Background="Red"
                Foreground="White" />
    </Grid>
  </Grid>
</Window>
