<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="https://github.com/avaloniaui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Kitbox.ViewModels"
    x:Class="Kitbox.Views.SecretaryView"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewmodels:SecretaryViewModel />
    </UserControl.DataContext>

    <StackPanel Margin="20" Spacing="20">
        <!-- Message -->
        <TextBlock Text="{Binding Message}" Foreground="Green" FontWeight="Bold" FontSize="14"/>

        <!-- Supplier Section -->
        <TextBlock Text="Suppliers" FontSize="18" FontWeight="Bold" />
        <DataGrid Items="{Binding Suppliers}" AutoGenerateColumns="False" Height="200">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding SupplierId}" Width="*" />
                <DataGridTextColumn Header="Name" Binding="{Binding SupplierName}" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBox Width="200" Watermark="Enter supplier name" x:Name="NewSupplierName" />
            <Button Content="Add Supplier" Width="120" Click="AddSupplier_Click" />
        </StackPanel>

        <!-- Product Section -->
        <TextBlock Text="Supplier Products" FontSize="18" FontWeight="Bold" Margin="0,20,0,0"/>
        <DataGrid Items="{Binding SupplierProducts}" AutoGenerateColumns="False" Height="200">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="*" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*" />
                <DataGridTextColumn Header="Delivery Time" Binding="{Binding DeliveryTime}" Width="*" />
                <DataGridTextColumn Header="Supplier ID" Binding="{Binding SupplierId}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBox Width="150" Watermark="Product name" x:Name="NewProductName" />
            <TextBox Width="100" Watermark="Price" x:Name="NewProductPrice" />
            <TextBox Width="100" Watermark="Delivery time" x:Name="NewProductDeliveryTime" />
            <TextBox Width="100" Watermark="Supplier ID" x:Name="NewProductSupplierId" />
            <Button Content="Add Product" Width="120" Click="AddProduct_Click" />
        </StackPanel>
    </StackPanel>
</UserControl>
