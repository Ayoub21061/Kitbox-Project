<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Kitbox.ViewModels;assembly=Kitbox"
        x:Class="Kitbox.Views.FifthPageView"
        x:DataType="vm:CustomerViewModel"
        Title="Kitbox's App">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="*"/>     <!-- Main content -->
            <RowDefinition Height="Auto"/>  <!-- Button row -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="Red" Height="40" HorizontalAlignment="Stretch" Grid.Row="0">
            <TextBlock Text="Résumé de la commande"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Margin="10">
            <StackPanel Spacing="15">

                <TextBlock Text="Liste des casiers :" FontWeight="Bold" FontSize="18" Foreground="Black"/>

                <!-- Table headers -->
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="150">
                        <TextBlock Text="Panel Gauche" HorizontalAlignment="Center" Foreground="Black"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="150">
                        <TextBlock Text="Panel Droit" HorizontalAlignment="Center" Foreground="Black"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="150">
                        <TextBlock Text="Panel Bas" HorizontalAlignment="Center" Foreground="Black"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="150">
                        <TextBlock Text="Panel Haut" HorizontalAlignment="Center" Foreground="Black"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                        <TextBlock Text="Long. Horiz." HorizontalAlignment="Center" Foreground="Black"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                        <TextBlock Text="Larg. Horiz." HorizontalAlignment="Center" Foreground="Black"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                        <TextBlock Text="Long. Vert." HorizontalAlignment="Center" Foreground="Black"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                        <TextBlock Text="Larg. Vert." HorizontalAlignment="Center" Foreground="Black"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="80">
                        <TextBlock Text="Avec Porte" HorizontalAlignment="Center" Foreground="Black"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                        <TextBlock Text="Type de Porte" HorizontalAlignment="Center" Foreground="Black"/>
                    </Border>
                </StackPanel>

                <!-- Table rows -->
                <ItemsControl ItemsSource="{Binding LockersData}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="2">
                                <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="150">
                                    <TextBlock Text="{Binding PanelLeft}" HorizontalAlignment="Center" Foreground="Black"/>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="150">
                                    <TextBlock Text="{Binding PanelRight}" HorizontalAlignment="Center" Foreground="Black"/>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="150">
                                    <TextBlock Text="{Binding PanelBottom}" HorizontalAlignment="Center" Foreground="Black"/>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="150">
                                    <TextBlock Text="{Binding PanelUp}" HorizontalAlignment="Center" Foreground="Black"/>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                                    <TextBlock Text="{Binding LongueurHorizontal}" HorizontalAlignment="Center" Foreground="Black"/>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                                    <TextBlock Text="{Binding LargeurHorizontal}" HorizontalAlignment="Center" Foreground="Black"/>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                                    <TextBlock Text="{Binding LongueurVertical}" HorizontalAlignment="Center" Foreground="Black"/>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                                    <TextBlock Text="{Binding LargeurVertical}" HorizontalAlignment="Center" Foreground="Black"/>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="80">
                                    <TextBlock Text="{Binding HasPorte}" HorizontalAlignment="Center" Foreground="Black"/>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                                    <TextBlock Text="{Binding TypeDePorte}" HorizontalAlignment="Center" Foreground="Black"/>
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Prix total estimé -->
                <TextBlock Text="{Binding TotalPrice, StringFormat='Prix total estimé : {0} €'}"
                           FontWeight="Bold"
                           FontSize="18"
                           Foreground="Black"
                           Margin="0,20,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Afficher détails -->
            <Button Content="Afficher plus de détails"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    BorderBrush="Black"
                    BorderThickness="2"
                    Background="Red"
                    Foreground="White"
                    Command="{Binding ShowDetailsCommand}"
                    Padding="10,5"
                    Margin="0,0,10,0"/>

            <!-- Page suivante -->
            <Button Content="Next Page"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    BorderBrush="Black"
                    BorderThickness="2"
                    Background="Red"
                    Foreground="White"
                    Command="{Binding SixthPageCommand}"
                    Padding="10,5"/>
        </Grid>
    </Grid>
</Window>
