<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Kitbox.ViewModels;assembly=Kitbox"
        xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
        x:Class="Kitbox.Views.FifthPageView"
        x:DataType="vm:CustomerViewModel"
        Title="Kitbox's App">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Entête -->
            <RowDefinition Height="*"/>  <!-- Contenu principal -->
            <RowDefinition Height="Auto"/>  <!-- Bouton -->
        </Grid.RowDefinitions>

        <!-- Entête -->
        <Border Background="Blue" Height="30" HorizontalAlignment="Stretch" Grid.Row="0">
            <TextBlock Text="Summary" Foreground="White"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       FontSize="18" FontWeight="Bold"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />  <!-- Première colonne -->
                <ColumnDefinition Width="1*" />  <!-- Deuxième colonne -->
                <ColumnDefinition Width="Auto" /> <!-- Troisième colonne (libre pour autre chose) -->
            </Grid.ColumnDefinitions>

            <!-- Première colonne : Détails sur le client -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Client's Summary:" FontWeight="Bold" FontSize="16" Foreground="Black"/>
                <TextBlock Text="{Binding Height, StringFormat='Height: {0}'}" Foreground="Black" />
                <TextBlock Text="{Binding Width, StringFormat='Width: {0}'}" Foreground="Black" />
                <TextBlock Text="{Binding Depth, StringFormat='Depth: {0}'}" Foreground="Black"/>
                <TextBlock Text="{Binding Lockers, StringFormat='Lockers: {0}'}" Foreground="Black"/>
            </StackPanel>

            <!-- Deuxième colonne : Liste des lockers -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Lockers Details:" FontWeight="Bold" FontSize="16"/>
                <ItemsControl ItemsSource="{Binding LockersList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding SelectedCouleur, StringFormat='Couleur: {0}'}" Foreground="Black"/>
                                <TextBlock Text="{Binding Longueur, StringFormat='Longueur: {0}'}" Foreground="Black"/>
                                <TextBlock Text="{Binding HasPorte, StringFormat='Has Porte: {0}'}" Foreground="Black"/>
                                <TextBlock Text="{Binding CouleurPorteSelected, StringFormat='Couleur Porte: {0}'}" Foreground="Black"/>
                                <TextBlock Text="{Binding MatérielPorte, StringFormat='Matériel Porte: {0}'}" Foreground="Black"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Espace libre sur la troisième colonne -->
            <Border Grid.Column="2" Background="LightGray" Margin="5">
                <TextBlock Text="Ici, tu peux ajouter autre chose" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Grid contenant le bouton -->
        <Grid Grid.Row="2">
            <Button Content="Next Page"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,10,10,10"
                    BorderBrush="Black"
                    BorderThickness="3"
                    Background="Red"
                    Foreground="White"
                    Command="{Binding FifthPageCommand}"/>
        </Grid>
    </Grid>

</Window>