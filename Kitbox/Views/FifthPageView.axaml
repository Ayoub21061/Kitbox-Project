<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Kitbox.ViewModels;assembly=Kitbox"
        xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
        x:Class="Kitbox.Views.FifthPageView"
        x:DataType="vm:CustomerViewModel"
        Title="Kitbox's App">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Entête -->
            <RowDefinition Height="*"/>     <!-- Contenu principal -->
            <RowDefinition Height="Auto"/>  <!-- Bouton -->
        </Grid.RowDefinitions>

        <!-- Entête -->
        <Border Background="Red" Height="30" HorizontalAlignment="Stretch" Grid.Row="0">
            <TextBlock Text="Summary" Foreground="White"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       FontSize="18" FontWeight="Bold"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- On supprime la première colonne -->
                <ColumnDefinition Width="*" />  <!-- Seule colonne restante -->
                <ColumnDefinition Width="Auto" /> <!-- Troisième colonne (libre) -->
            </Grid.ColumnDefinitions>

            <!-- Deuxième colonne (maintenant première) : Liste des lockers -->
            <StackPanel Grid.Column="0" Margin="10,10,0,10" HorizontalAlignment="Left">
                <TextBlock Text="Lockers Details:" FontWeight="Bold" FontSize="16" Foreground="Black"/>

                <!-- Manuelle table des lockers -->
                <StackPanel Margin="10" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                            <TextBlock Text="Left" Foreground="Black" HorizontalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                            <TextBlock Text="Right" Foreground="Black" HorizontalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                            <TextBlock Text="Back" Foreground="Black" HorizontalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                            <TextBlock Text="Top" Foreground="Black" HorizontalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                            <TextBlock Text="Longueur" Foreground="Black" HorizontalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                            <TextBlock Text="Largeur" Foreground="Black" HorizontalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                            <TextBlock Text="Porte" Foreground="Black" HorizontalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                            <TextBlock Text="Type De Porte" Foreground="Black" HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- Liste des lockers -->
                    <ItemsControl ItemsSource="{Binding LockersList}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">

                                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                                        <TextBlock Text="{Binding PanelLeft}" Foreground="Black" HorizontalAlignment="Center"/>
                                    </Border>

                                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                                        <TextBlock Text="{Binding PanelRight}" Foreground="Black" HorizontalAlignment="Center"/>
                                    </Border>

                                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                                        <TextBlock Text="{Binding PanelBottom}" Foreground="Black" HorizontalAlignment="Center"/>
                                    </Border>

                                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                                        <TextBlock Text="{Binding PanelUp}" Foreground="Black" HorizontalAlignment="Center"/>
                                    </Border>

                                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                                        <TextBlock Text="{Binding LongueurVertical}" Foreground="Black" HorizontalAlignment="Center"/>
                                    </Border>

                                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                                        <TextBlock Text="{Binding LargeurHorizontal}" Foreground="Black" HorizontalAlignment="Center"/>
                                    </Border>

                                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                                        <TextBlock Text="{Binding HasPorte}" Foreground="Black" HorizontalAlignment="Center"/>
                                    </Border>

                                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Width="100">
                                        <TextBlock Text="{Binding PorteSelected}" Foreground="Black" HorizontalAlignment="Center"/>
                                    </Border>

                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Nouvelle ligne Iron en dessous -->
                <StackPanel Orientation="Horizontal" Margin="10,20,0,0">
                    <TextBlock Text="Iron: " FontWeight="Bold" FontSize="16" Foreground="Black" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding IronDisplay}" FontSize="16" Foreground="Black" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Espace libre sur la deuxième colonne (avant 3ème) -->
            <Border Grid.Column="1" Background="LightGray" Margin="5">
                <TextBlock Text="Ici, tu peux ajouter autre chose" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black"/>
            </Border>
        </Grid>

        <!-- Grid contenant le bouton -->
        <Grid Grid.Row="2">
            <Button Content="Next Page"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,10,10,10"
                    BorderBrush="Black"
                    BorderThickness="3"
                    Background="Red"
                    Foreground="White"
                    Command="{Binding SixthPageCommand}"/>
        </Grid>
    </Grid>

</Window>
